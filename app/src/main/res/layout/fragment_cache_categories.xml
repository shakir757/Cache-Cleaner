<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_main"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_clean_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_button_cleaning_cache"
        android:text="Clean cache"
        android:fontFamily="@font/milliard"
        app:layout_constraintBottom_toTopOf="@id/button_clean_files"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/milliard"
        android:text="10 points"
        app:layout_constraintEnd_toEndOf="@+id/button_clean_cache"
        app:layout_constraintStart_toStartOf="@+id/button_clean_cache"
        app:layout_constraintTop_toBottomOf="@id/button_clean_cache" />

    <Button
        android:id="@+id/button_clean_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_button_cleaning_cache"
        android:text="Cleaning unnecessary files"
        android:fontFamily="@font/milliard"
        app:layout_constraintBottom_toTopOf="@id/button_clean_hidden_files"
        app:layout_constraintTop_toBottomOf="@id/button_clean_cache"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/milliard"
        android:text="10 points"
        app:layout_constraintEnd_toEndOf="@+id/button_clean_files"
        app:layout_constraintStart_toStartOf="@+id/button_clean_files"
        app:layout_constraintTop_toBottomOf="@id/button_clean_files" />

    <Button
        android:id="@+id/button_clean_hidden_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_button_cleaning_cache"
        android:text="Cleaning hidden files"
        android:fontFamily="@font/milliard"
        app:layout_constraintTop_toBottomOf="@id/button_clean_files"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/milliard"
        android:text="10 points"
        app:layout_constraintEnd_toEndOf="@+id/button_clean_hidden_files"
        app:layout_constraintStart_toStartOf="@+id/button_clean_hidden_files"
        app:layout_constraintTop_toBottomOf="@id/button_clean_hidden_files" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/cache_gif"
        app:layout_constraintBottom_toTopOf="@+id/button_clean_cache"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_back_to_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>